<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    card_view:cardCornerRadius="8dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <TextView
            android:id="@+id/short_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:text="Looking for carry"
            android:textSize="24sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/short_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:textSize="14sp"
            android:textStyle="normal"
            tools:text="Short description..." />

        <TextView
            android:id="@+id/mmr_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="64dp"
            android:gravity="center"
            android:text="MMR: "
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/mmr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:layout_toEndOf="@+id/mmr_text"
            android:layout_toRightOf="@+id/mmr_text"
            android:gravity="center"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:text="3500" />

        <TextView
            android:id="@+id/age_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:layout_marginStart="17dp"
            android:layout_marginTop="64dp"
            android:layout_toEndOf="@+id/mmr"
            android:layout_toRightOf="@+id/mmr"
            android:gravity="center"
            android:text="Age: "
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:layout_toEndOf="@+id/age_text"
            android:layout_toRightOf="@+id/age_text"
            android:gravity="center"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:text="16-19 y.o." />

        <TextView
            android:id="@+id/roles_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:layout_marginStart="17dp"
            android:layout_marginTop="64dp"
            android:layout_toEndOf="@+id/age"
            android:layout_toRightOf="@+id/age"
            android:gravity="center"
            android:text="Roles: "
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/roles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:layout_toEndOf="@+id/roles_text"
            android:layout_toRightOf="@+id/roles_text"
            android:gravity="center"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:text="carry" />


    </RelativeLayout>

</android.support.v7.widget.CardView>